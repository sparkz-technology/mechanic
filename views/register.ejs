<!-- views/registrationTemplate.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <title>Registration Successful</title>
  </head>
  <body class="bg-gray-100">
    <div class="max-w-2xl mx-auto p-4">
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-3xl font-bold text-center mb-6 text-blue-600">
          Registration Successful
        </h1>
        <p class="text-lg mb-4">
          Dear <span class="font-semibold"><%= username %>,</span>
        </p>
        <p class="mb-4">
          Your registration has been successfully completed with us.
        </p>
        <p class="mb-4">We are thrilled to have you on board!</p>
        <p class="text-sm text-gray-600">Best regards,<br />Your Name</p>
      </div>
    </div>
  </body>
</html>
